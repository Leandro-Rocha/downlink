{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "port": 9222,
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:3000/index.html",
            "webRoot": "${workspaceFolder}/public/"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--timeout 99999",
                "--colors",
                "--recursive",
                "${workspaceFolder}/test/**/*.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon",
            "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon",
            "args": [
                "--watch",
                "src/server/",
                "--watch",
                "src/common/",
                "--exec",
                "ts-node app.ts",
                "-e",
                "ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        }
    ]
}